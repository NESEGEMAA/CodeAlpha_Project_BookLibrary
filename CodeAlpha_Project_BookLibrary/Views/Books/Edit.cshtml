@model CodeAlpha_Project_BookLibrary.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for Book Id -->
            <input type="hidden" asp-for="Id" />

            <!-- Hidden field with dynamically set UserId -->
            <input type="hidden" name="UserId" value="TEMP_USER_ID" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowTime" class="control-label"></label>
                <input asp-for="BorrowTime" class="form-control" type="date" value="@Model.BorrowTime.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="BorrowTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsReturned" class="control-label">Is Returned</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="IsReturned" value="true" id="ReturnedYes" />
                    <label class="form-check-label" for="ReturnedYes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="IsReturned" value="false" id="ReturnedNo" />
                    <label class="form-check-label" for="ReturnedNo">No</label>
                </div>
                <span asp-validation-for="IsReturned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
